@model List<Fiap.Revisao.MVC.Web.Models.Livro>
@{
    ViewBag.Title = "Listar";
}

<h2>Lista de livros</h2>

@if (TempData["msg"] != null)
{
    <div class="alert alert-success">
        @TempData["msg"]
    </div>
}

<table class="table">
    <tr>
        <th>Título</th>
        <th>Status</th>
        <th>Editora</th>
        <th></th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.Titulo</td>
            <td>@item.Status</td>
            <td>@item.Editora.Nome</td>
            <td>@Html.ActionLink("Reservar","Reservar", new { id = @item.LivroId })</td>
        </tr>
    }
</table>